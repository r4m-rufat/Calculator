                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:elevation="3dp"
                android:layout_marginTop="1dp"
                app:cardBackgroundColor="#F46A00"
                app:cardCornerRadius="5dp">

                <TextView
